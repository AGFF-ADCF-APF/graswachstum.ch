{% extends "forms/fields/selectize/selectize.html.twig" %}

{% block group %}
{{ parent() }}
{% set autogenerated = seomagic_keywords() %}
<div>
{% if field.source == 'metadata' %}
  <div class="seo-msg">
    <div class="seomagic-label">{{ 'PLUGIN_SEOMAGIC.CURRENT_METADATA'|tu }}:</div>
    <div class="seomagic-keywords">
      {% for keyword in attribute(seomagic_metadata, 'keywords')|split(',') %}
        <span>{{ keyword }}</span>
      {% endfor %}
    </div>
  </div>
{% elseif autogenerated %}
  <div class="seo-msg">
    <div class="seomagic-label">{{ 'PLUGIN_SEOMAGIC.AUTO_GENERATED'|tu }}:</div>
    <div class="seomagic-keywords">
      {% for keyword in autogenerated %}
        <span>{{ keyword }}</span>
      {% endfor %}
    </div>
  </div>
{% endif %}
</div>
{% endblock %}